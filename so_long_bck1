int	main(int ac, char **av)
{
	int		i;
	t_game	game;

	i = 0;
	ft_check_ac(ac, av);
	ft_initmap(&game);
	ft_initdim(&game);
	ft_create_tmpmap(av[1], &game);
	ft_checkformat(&game);
	ft_create_realmap(av[1], &game);
	ft_checkmap(&game);
	ft_floodfillmap(&game);
	ft_opengame(&game);
}
